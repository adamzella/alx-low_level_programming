# Compiler
CC := gcc

# Source files
SRC := $(wildcard *.c)

# Object files
OBJ := $(SRC:.c=.o)

# Executable name
NAME := school

# Program to delete files
RM := /bin/rm -f

# Compiler flags
CFLAGS := -Wall -Werror -Wextra -pedantic

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $(NAME)

# Rule to clean Emacs and Vim temporary files, along with the executable
clean:
	$(RM) *~ $(NAME)

# Rule to clean object files
oclean:
	$(RM) $(OBJ)

# Rule to clean Emacs and Vim temporary files, the executable, and object files
fclean: clean oclean

# Rule to force recompilation of all source files
re: fclean all

# Dependencies
$(OBJ): %.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

# Prevent make from deleting object files implicitly
.PRECIOUS: $(OBJ)

