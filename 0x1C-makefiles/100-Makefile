# Compiler
CC := gcc

# Source files
SRC := main.c school.c

# Object files
OBJ := main.o school.o

# Executable name
NAME := school

# Program to delete files
RM := /bin/rm -f

# Compiler flags
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to clean Emacs and Vim temporary files, along with the executable
clean:
	$(RM) *~ $(NAME)

# Rule to clean object files
oclean:
	$(RM) $(OBJ)

# Rule to clean Emacs and Vim temporary files, the executable, and object files
fclean: clean oclean

# Rule to force recompilation of all source files
re: fclean all

# Rule to compile .c files to .o files
%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

# Check if header file m.h exists
m.h:
    @test -e m.h || (echo "Header file m.h is missing."; exit 1)

